<h1>Search Results</h1>
 
<% if @films %>
  <ul class="search_results">
    <% @films.each do |film| %>
      <li>
        <h3>
          <%= link_to film.try(:highlight).try(:title) ?
              film.highlight.title[0].html_safe : film.title,
              controller: "films", action: "show", id: film._id %>
        </h3>
        <% if film.try(:highlight).try(:text) %>
          <% film.highlight.text.each do |snippet| %>
          <p><%= snippet.html_safe %>...</p>
        <% end %>
      <% end %>
    </li>
  <% end %>
</ul>
<% else %>
  <p>Your search did not match any documents.</p>
<% end %>